@page
@model ForBeginers.Pages.BookList.UpsertModel

<h2 class="text-info">@(Model.Book.Id == 0? "Create":"Edit") Book</h2>
<div class="border container" style="padding: 30px;">
    <form method="post">
        @if(Model.Book.Id != 0)
        { 
            <input type="hidden" asp-for="Book.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" placeholder="Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" placeholder="Autror" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>
        </div>

        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" placeholder="ISBN" class="form-control" />
                <!--Binding-->
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-1">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id == 0? "Create":"Edit")"</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>